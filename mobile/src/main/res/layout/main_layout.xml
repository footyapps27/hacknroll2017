<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#2ABB9D"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout_name">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:text="Hello John, "/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_below="@+id/linearLayout_name">

            <ImageView
                android:id="@+id/imageView_voice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/microphone"
                />

            <ImageView
                android:id="@+id/imageView_manualEntry"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/pencil"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_below="@id/layout_input1"
            android:layout_height="wrap_content">

            <ImageView
            android:id="@+id/img_camera"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/photo_camera"
            />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>